---
export const prerender = true;
import { getEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import TextSection from "@/layouts/TextSection.astro";

const post = await getEntry("about-me", "about-me");
const { Content } = await post?.render();


---

<Layout title='Monica DeFosse - About Me' description="Hello Dreamers! I'm Monica and here's why I love helping you plan all your special magical adventures." url={Astro.url.href}>
	
		<TextSection>
			<Content slot='content-area' />
		</TextSection>
	
</Layout>
