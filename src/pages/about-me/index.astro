---
export const prerender = true;
import { getEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import TextSection from "@/layouts/TextSection.astro";
import createStarterMetaTags from "@/functions/createStarterMetaTags";
import type { SEOProps } from "astro-seo";
import type { StarterMetaTagProps as InputProps } from "@/functions/createStarterMetaTags";

const post = await getEntry("about-me", "about-me");
const { Content } = await post?.render();

const objectToPlace: InputProps = {
	title: "About Me",
	description: "Learn about where my love for Disney and travel comes from and how I can support you in your journey!",
	url: Astro.url.href,
	mainSite: Astro.url.origin,
	imageURL: Astro.url.origin + "/monica_og_image.jpeg",
	imageAlt: "Monica DeFosse - About Me Photo",
	openGraph: {
		type: "website",
	},
	twitter: {
		card: "summary_large_image",
	},
};

const SEO: ReturnType<typeof createStarterMetaTags> = createStarterMetaTags(objectToPlace);

const extensions: SEOProps = {
	...SEO,
	extend: {
		meta: [{ name: "og:logo", content: "magicaladventuresbymonica.com" + "/monica_og_image.jpeg" + "?w=300" }],
	},
};
---

<Layout userSEOProps={extensions}>
	<TextSection>
		<Content slot='content-area' />
	</TextSection>
</Layout>
