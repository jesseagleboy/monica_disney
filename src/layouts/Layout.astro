---
import { ViewTransitions } from "astro:transitions";

import "../styles/style.scss";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Astro description' />
		<meta name='viewport' content='width=device-width; initial-scale=1; viewport-fit=cover' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<link rel='sitemap' href='/sitemap-index.xml' />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<header>
			<p>Monica DeFosse</p>
		</header>
		<div class='background-image'></div>
		<div class='screen-safe-area'>
			<slot />
		</div>

		<style is:global>
			:root {
				--accent: 136, 58, 234;
				--accent-light: 224, 204, 250;
				--accent-dark: 49, 10, 101;
				--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
			}
			html {
				/* background: #13151a; */
				height: 100%;
			}
			* {
				box-sizing: border-box;
			}

			.screen-safe-area {
				padding: 1rem;
			}

			header {
				display: flex;
				padding: calc(env(safe-area-inset-top) + 1rem) 0.5rem;
				align-items: center;
				background-color: white;
				background-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
				position: sticky;
				top: 0;
				z-index: 999;
			}

			.background-image {
				background-image: url("https://upload.wikimedia.org/wikipedia/commons/thumb/4/45/Spaceship_Earth_with_Mickey%27s_Wand.jpg/1600px-Spaceship_Earth_with_Mickey%27s_Wand.jpg");
				z-index: -10;
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;

				background-size: cover;
				background-position: center;
				filter: blur(10px) brightness(0.9);
			}

			code {
				font-family:
					Menlo,
					Monaco,
					Lucida Console,
					Liberation Mono,
					DejaVu Sans Mono,
					Bitstream Vera Sans Mono,
					Courier New,
					monospace;
			}
		</style>
		<style>
			@view-transition {
				navigation: auto; /* enabled! */
			}
		</style>
	</body>
</html>
