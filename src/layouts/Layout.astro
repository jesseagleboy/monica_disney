---
import { ViewTransitions } from "astro:transitions";

import "../styles/style.scss";

interface Props {
	title: string;
	description?: string;
}

import monicaImage from "@/images/monica.jpeg";

console.log(monicaImage);

const defaultDescription = "Once Upon A Wish Travel";

const { title, description = defaultDescription } = Astro.props;
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content={description} />
		<meta name='viewport' content='width=device-width; initial-scale=1; viewport-fit=cover' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<link rel='sitemap' href='/sitemap-index.xml' />

		<!-- Facebook Meta Tags -->
		<meta property='og:url' content='https://magicaladventuresbymonica.com/' />
		<meta property='og:type' content='website' />
		<meta property='og:title' content='Monica DeFosse - Once Upon A Wish Travel' />
		<meta property='og:description' content='Monica DeFosse - Once Upon A Wish Travel' />
		<meta property='og:image' content={monicaImage.src} />

		<!-- Twitter Meta Tags -->
		<meta name='twitter:card' content='summary_large_image' />
		<meta property='twitter:domain' content='magicaladventuresbymonica.com' />
		<meta property='twitter:url' content='https://magicaladventuresbymonica.com/' />
		<meta name='twitter:title' content='Monica DeFosse - Once Upon A Wish Travel' />
		<meta name='twitter:description' content='Monica DeFosse - Once Upon A Wish Travel' />
		<meta name='twitter:image' content={monicaImage.src} />

		<!-- Meta Tags Generated via https://www.opengraph.xyz -->

		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<header>
			<p>Monica DeFosse</p>
		</header>
		<div class='background-image'></div>
		<div class='screen-safe-area'>
			<slot />
		</div>
		<footer>
			<section class='footer-info'>
				<section class='person-info'>
					<p>Monica DeFosse&nbsp;-&nbsp;</p>
					<a href='https://onceuponawishtravel.com' class='prose'><p>Agent of <i>Once Upon A Wish Travel</i></p></a>
				</section>
				<section class='contact'>
					<a href='tel:5135152967' class='prose'><p>Phone: (513)-515-2967</p></a>
					<a href='mailto:monica.defosse@onceuponawishtravel.com' class='prose'><p>Email: monica.defosse@onceuponawishtravel.com</p></a>
				</section>
				<section class='copyright'>
					<p>Â© {new Date().getFullYear()}. All rights reserved.</p>
				</section>
			</section>
		</footer>

		<style is:global>
			:root {
				--accent: 136, 58, 234;
				--accent-light: 224, 204, 250;
				--accent-dark: 49, 10, 101;
				--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
			}
			html {
				/* background: #13151a; */
				height: 100%;
			}
			* {
				box-sizing: border-box;
			}

			header {
				display: flex;
				padding: calc(env(safe-area-inset-top) + 1rem) 0.5rem;
				align-items: center;
				background-color: white;
				background-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
				position: sticky;
				top: 0;
				z-index: 999;
			}

			.background-image {
				background-image: url("https://upload.wikimedia.org/wikipedia/commons/thumb/4/45/Spaceship_Earth_with_Mickey%27s_Wand.jpg/1600px-Spaceship_Earth_with_Mickey%27s_Wand.jpg");
				height: 500px;
				background-position: center;
				background-repeat: no-repeat;
				background-size: cover;
				z-index: -1;
				position: absolute;
				left: 0;
				right: 0;
				filter: blur(10px) brightness(90%);
			}

			code {
				font-family:
					Menlo,
					Monaco,
					Lucida Console,
					Liberation Mono,
					DejaVu Sans Mono,
					Bitstream Vera Sans Mono,
					Courier New,
					monospace;
			}
		</style>
		<style lang='scss'>
			@view-transition {
				navigation: auto; /* enabled! */
			}

			.screen-safe-area {
				padding: 1rem;
			}

			footer {
				border-top: 1px solid black;
				background-color: lightblue;
				padding-inline: 1rem;
			}

			.person-info {
				display: flex;
				// gap: 0.5rem;
			}
		</style>
	</body>
</html>
